@model List<CoordenadorModel>

@{

    ViewData["Title"] = "Coordenador";

}

<a role="button" class="btn btn-primary" asp-controller="Admin" asp-action="Index">Voltar</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {

                <tr>
                    <td>@user.Id</td>
                    <td>@user.Nome</td>

                    <td>

                        <a role="button" class="btn btn-success" style="padding: 5px 15px" asp-controller="Admin" asp-action="VerAluno">Ver</a>
                        <a role="button" class="btn btn-primary" style="padding: 5px 15px" asp-controller="Admin" asp-action="EditarAluno">Editar</a>
                        <a role="button" class="btn btn-danger" style="padding: 5px 15px" asp-controller="Admin" asp-action="RemoverAluno">Remover</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a role="button" class="btn btn-primary" asp-controller="Admin" asp-action="CriarCoordenador">Cadastrar Coordenador</a>
